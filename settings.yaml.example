# 🛡️ RBAC Admin System - 配置模板
# 这是配置文件的模板，请复制为settings.yaml并根据实际情况修改
# ⚠️ 重要：不要将此文件提交到Git仓库！

# =============================================================================
# 🖥️ 系统配置
# =============================================================================
system:
    ip: 127.0.0.1      # 监听IP地址
    port: 8090         # 监听端口
    mode: release   # mode 意思是显示不显示debug

# =============================================================================
# 🗄️ 数据库配置
# =============================================================================
db:
    # 数据库类型：mysql, sqlite, postgres
    mode: mysql
    
    # MySQL/PostgreSQL配置
    host: localhost    # 数据库主机地址
    port: 3306         # 数据库端口
    user: root         # 数据库用户名
    password: "your_secure_password_here"  # 数据库密码（建议使用强密码）
    db_name: rbacAdmin # 数据库名称
    
    # SQLite配置（当mode为sqlite时使用）
    # db_name: rbac.db  # SQLite数据库文件名

# =============================================================================
# 📊 Redis配置（可选）
# =============================================================================
redis:
    addr: localhost:6379  # Redis服务器地址
    password: ""            # Redis密码（如无密码留空）
    db: 0                   # Redis数据库编号（0-15）

# =============================================================================
# 🔐 安全配置（可选扩展）
# =============================================================================
# security:
#     jwt_secret: "your_jwt_secret_key_here"      # JWT密钥（至少32位）
#     csrf_secret: "your_csrf_secret_key_here"    # CSRF密钥
#     session_timeout: 3600                        # 会话超时时间（秒）

# =============================================================================
# 📝 日志配置（可选扩展）
# =============================================================================
# log:
#     level: info           # 日志级别：debug, info, warn, error
#     file: logs/app.log    # 日志文件路径
#     max_size: 100         # 日志文件最大大小（MB）
#     max_backups: 3        # 保留的旧日志文件数量
#     max_age: 7            # 保留的旧日志文件天数